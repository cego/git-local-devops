		"@types/js-yaml": "4.0.5",
		"@types/lodash": "4.14.184",
		"@types/node": "16.11.51",
		"@types/prompts": "2.0.14",
		"@types/yargs": "17.0.11",
		"@typescript-eslint/eslint-plugin": "5.33.1",
		"@typescript-eslint/parser": "5.33.1",
		"eslint": "8.22.0",
		"eslint-config-prettier": "8.6.0",
		"jest": "27.5.1",
		"jest-when": "3.5.1",
		"pkg": "5.5.2",
